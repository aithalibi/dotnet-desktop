@using Location_voiture_front_web.Services
@inject IAuthService AuthService

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Location Voitures</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark sticky-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <i class="fas fa-car"></i> Location Voitures
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-md-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">
                                <i class="fas fa-home"></i> Accueil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Vehicules/Index">
                                <i class="fas fa-car"></i> Véhicules
                            </a>
                        </li>
                        @{
                            var currentUser = AuthService.GetCurrentUser();
                            @if (currentUser != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/Locations/Index">
                                        <i class="fas fa-calendar-check"></i> Mes Locations
                                    </a>
                                </li>
                                @if (currentUser.TypeUtilisateur == "ADMINISTRATEUR" || currentUser.TypeUtilisateur == "EMPLOYE")
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-page="/Admin/Dashboard">
                                            <i class="fas fa-tachometer-alt"></i> Admin
                                        </a>
                                    </li>
                                }
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (currentUser != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle"></i> @currentUser.Prenom @currentUser.Nom
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" href="/Profil">
                                        <i class="fas fa-user"></i> Mon Profil
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/Auth/Logout">
                                        <i class="fas fa-sign-out-alt"></i> Déconnexion
                                    </a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Auth/Login">
                                    <i class="fas fa-sign-in-alt"></i> Connexion
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Auth/Register">
                                    <i class="fas fa-user-plus"></i> Inscription
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="flex-shrink-0">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>

    <footer class="footer mt-auto py-4 bg-dark text-white border-top">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold mb-3">
                        <i class="fas fa-car text-primary"></i> Location Voitures
                    </h5>
                    <p class="text-muted small">
                        Votre partenaire de confiance pour la location de véhicules de qualité.
                    </p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold mb-3">Navigation</h5>
                    <ul class="list-unstyled small">
                        <li><a href="/Index" class="text-muted text-decoration-none">Accueil</a></li>
                        <li><a href="/Vehicules" class="text-muted text-decoration-none">Véhicules</a></li>
                        <li><a href="/Privacy" class="text-muted text-decoration-none">Confidentialité</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold mb-3">Contact</h5>
                    <p class="text-muted small mb-0">
                        <i class="fas fa-phone"></i> +33 1 23 45 67 89<br>
                        <i class="fas fa-envelope"></i> contact@location-voitures.fr
                    </p>
                </div>
            </div>
            <hr class="border-secondary">
            <div class="text-center text-muted small">
                &copy; 2025 - Location Voitures. Tous droits réservés.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>