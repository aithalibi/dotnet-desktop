@page
@model Location_voiture_front_web.Pages.Auth.ForgotPasswordModel
@{
    ViewData["Title"] = "Mot de passe oublié";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-key"></i> Mot de passe oublié</h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @Model.SuccessMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!Model.CodeSent)
                    {
                        <p class="text-muted">
                            Entrez votre adresse email pour recevoir un code de vérification.
                        </p>

                        <form method="post">
                            <div class="mb-3">
                                <label for="Email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="Email" name="Email" 
                                       asp-for="Email" required placeholder="votre-email@exemple.com">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-paper-plane"></i> Envoyer le code
                                </button>
                                <a asp-page="/Auth/Login" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left"></i> Retour à la connexion
                                </a>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Code envoyé !</strong> Vérifiez votre boîte email.
                        </div>
                        
                        <div class="text-center mt-3">
                            <a asp-page="/Auth/VerifyResetCode" asp-route-email="@Model.Email" 
                               class="btn btn-success btn-lg">
                                <i class="fas fa-arrow-right"></i> Saisir le code
                            </a>
                        </div>
                    }
                </div>
            </div>

            <div class="text-center mt-3">
                <small class="text-muted">
                    <i class="fas fa-shield-alt"></i> Vos données sont sécurisées
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
